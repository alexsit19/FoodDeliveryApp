<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <TextView
        android:id="@+id/moskow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moskow"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawablePadding="14dp"
        android:textColor="@color/blue_gray"
        android:drawableEnd="@drawable/arrow"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <ImageView
        android:id="@+id/qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr_code__1__1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/qr_code_description_image" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/banners"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moskow" />

    <HorizontalScrollView
        android:id="@+id/chips_scrollview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banners">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/pizza_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/pizza"
                android:textColor="@color/pink"
                android:textSize="13sp"
                app:chipBackgroundColor="@color/pale_pink"
                app:chipCornerRadius="6dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/combo_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_4"
                android:elevation="8dp"
                android:text="@string/combo"
                android:textColor="@color/silver"
                android:textSize="13sp"
                app:chipBackgroundColor="@color/white"

                app:chipCornerRadius="6dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/snacks_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_4"
                android:elevation="8dp"
                android:text="@string/snacks"
                android:textColor="@color/silver"
                android:textSize="13sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="6dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/desserts_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_4"
                android:elevation="8dp"
                android:text="@string/desserts"
                android:textColor="@color/silver"
                android:textSize="13sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="6dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/drinks_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_4"
                android:elevation="8dp"
                android:text="@string/drinks"
                android:textColor="@color/silver"
                android:textSize="13sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="6dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/sauces_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_4"
                android:elevation="8dp"
                android:text="@string/sauces"
                android:textColor="@color/silver"
                android:textSize="13sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="6dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/other_goods_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_4"
                android:elevation="8dp"
                android:text="@string/other_goods"
                android:textColor="@color/silver"
                android:textSize="13sp"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="6dp" />
        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chips_scrollview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_navigation_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>